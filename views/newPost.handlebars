<h1 style='color: #bac2de;'>
	New Post
</h1>
<form class='form new-post-form'>
	<div class='form-group'>
		<label for='title-new-post' style='color: #a6adc8;'>
			Title:
		</label>
		<input class='form-input' type='text' id='title-new-post' />
	</div>
	<div class='form-group'>
		<label for='content-new-post' style='color: #a6adc8;'>
			Body:
		</label>
		<textarea
			class='form-input'
			type='text'
			id='content-new-post'
		></textarea>
	</div>
	<div class='form-group'>
		<button
			class='btn btn-lg btn-info'
			type='submit'
			style='color: #cdd6f4;'
		>
			Post
		</button>
	</div>
</form>
<script src='/js/newPost.js'></script>