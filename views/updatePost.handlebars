<h1 style='color: #bac2de;'>
	Update Post
</h1>
<form class='form update-form'>
	<div class='form-group'>
		<label for='title-update-post' style='color: #a6adc8;'>
			Title:
		</label>
		<textarea
			class='form-input'
			type='text'
			id='title-update-post'
		>{{post.title}}</textarea>
	</div>
	<div class='form-group'>
		<label for='content-update-post' style='color: #a6adc8;'>
			Body:
		</label>
		<textarea
			class='form-input'
			type='text'
			id='content-update-post'
		>{{post.content}}</textarea>
	</div>
	<div class='form-group'>
		<button
			class='btn btn-lg btn-info'
			id='btn-update'
			data-uid={{post.id}}
			type='submit'
			style='color: #cdd6f4;'
		>
			Update
		</button>
	</div>
</form>
<script src='/js/updatePost.js'></script>