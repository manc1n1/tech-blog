<h1 style='color: #bac2de;'>
	New Comment
</h1>
<form class='form comment-form'>
	<div class='form-group'>
		<textarea class='form-input' type='text' id='comment'></textarea>
	</div>
	<div class='form-group'>
		<button
			class='btn btn-lg btn-info'
			id='btn-comment'
			type='submit'
			data-id={{post.id}}
			style='color: #cdd6f4;'
		>
			Comment
		</button>
	</div>
</form>
<script src='/js/comment.js'></script>